<%- include('partial/header')%>

<div class="container my-5">
  <div class="row">
    <div class=" col-md-5 offset-md-3">
      <div class="card card-body my-card">
        <h4 class="p-3mb-3 text-center font-weight-bold">Create A New Account</h4>
        <form class="p-4" action="/v1/register" method="POST">
          <div class="form-group">
            <label class="py-2" for="username">Enter Your Username</label>
            <input
              type="text"
              name="username"
              id="username"
              class="form-control"
              value=""
            />
          </div>

          <div class="form-group">
            <label class="py-2" for="email">Enter Your Email</label>
            <input
              type="email"
              name="email"
              id="email"
              class="form-control"
              value=""
            />
          </div>

          <div class="form-group">
            <label class="py-2" for="password">Enter Password</label>
            <input
              type="password"
              name="password"
              id="password"
              class="form-control"
              value=""
            />
          </div>

          <div class="form-group">
            <label class="py-2" for="confirmPassword">Confirm Your Password</label>
            <input
              type="password"
              name="confirmPassword"
              id="confirmPassword"
              class="form-control"
            />
          </div>

          <input type="submit" class="btn btn-primary my-3" value="CREATE ACCOUNT" />
        </form>
        <a href="/v1/login" class="mx-3 px-1 "><span style="color: black; padding-right: 4px;">Already have an Account?</span>Login Here</a
        >
      </div>
    </div>
  </div>
</div>

<%- include('partial/footer')%>
